<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colours -->
    <Color x:Key="Primary">#FF4F54FF</Color>
    <Color x:Key="SurfaceGlass">#A0FFFFFF</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceGlass}" />

    <!-- Typographic styles -->
    <Style x:Key="TextDisplay" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        <Setter Property="FontSize"   Value="48"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="TextBody" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Variable Text"/>
        <Setter Property="FontSize"   Value="14"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Panel card template -->
    <Style x:Key="PanelCard" TargetType="Border">
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Background"   Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Padding"      Value="16"/>
        <Setter Property="Effect">
            <Setter.Value>
                <BlurEffect Radius="6"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
